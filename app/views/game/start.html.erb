<h1>Cardgame_name</h1>
<p class = "opponent"><span class = deck> opponents deck</span><span class = hand> opponents hand</span></p>
<p class = "field">
    <% i = 0 %>
    <%while i < @gameState.field.cards.length do%>

        <div><turbo-frame class = "row">
            <% j = 0%>
            <% while j < @gameState.field.cards[i].length do%>
                <span class = "zone Card <%=@gameState.field.cards[j][2-i].class.to_s %>">
                    <% if @aCardIsClicked && i == 2 %>
                        <%= button_to "cards", {:action => "play"}, params: {column_id: j} %> 
                    <% else %>
                    <% end %>           
                </span>
                <% j = j+1%>
            <%end%>
        </turbo-frame>
        <% i = i+ 1%></div>
    <% end %>
</p>
<div class = "player">
    <turbo-frame id = "hand"> 
        <% i = 0 %>
        <% while i < @gameState.hand.cards.size do %>           
            <span class = "<%= @gameState.hand.cards[i].class.to_s  %> Card" >
                <% unless @aCardIsClicked %>
                    <%= button_to "cards", {:action => "play"}, params: {card_id: i} %> 
                <%end%>
            </span>
            <%i=i+1%>
        <%end%>   
    </turbo-frame>
    <span class = deck> DECK</span>
</div>
