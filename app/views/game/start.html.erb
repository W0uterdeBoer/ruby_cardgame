<h1>Cardgame_name</h1>
<p class = "opponent"><span class = deck> opponents deck</span><span class = hand> opponents hand</span></p>
<p class = "field">
    <p class = "row">
        <span class = "zone">,</span><span class = "zone">,</span><span class = "zone">,</span>
    </p>
    <p class = "row">
        <span class = "zone">,</span><span class = "zone">,</span><span class = "zone">,</span>
    </p>
    <p class = "row">
        <span class = "zone">,</span><span class = "zone">,</span><span class = "zone">,</span>
    </p>
</p>
<p class = "player">
    <turbo-frame id = "hand"> 
        <% i = 0 %>
        <% while i < @gameState.hand.cards.size do %>
            <span class = "<%= @gameState.hand.cards[i].class.to_s  %> Card" > </span>
            <%i=i+1%>
        <%end%>   
    </turbo-frame>
    <span class = deck> DECK</span>
</p>
