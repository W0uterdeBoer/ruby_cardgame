<h1>Cardgame_name</h1>
<%this_player = @gameState.player_two.name%>
<%= render partial: 'opponent_hand', locals: {opponent: @gameState.player_one} %>

<p class = "field">
    <% j = 0 %>
    <%while j < @gameState.field.cards.length do%>
        <div><turbo-frame class = "row">

            <% i = 0%>
            <%= @gameState.field.cards[j].length%>
            <% while i < @gameState.field.cards[j].length do%>
                <%= i%>
                <%zone_content = @gameState.field.cards[2-i][j]%>
                <%= render partial: 'card', locals: {card: zone_content, player: this_player , position:[2-i,j], source: "field"} %>

                <% i = i+1%>
            <%end%>
            <% j = j + 1%>
        </turbo-frame></div>
    <% end %>
</p>

<div class = "player">
    <turbo-frame id = "hand"> 
        <% i = 0 %>
        <% while i < @gameState.player_two_hand.cards.size do %>          
            <%hand_content = @gameState.player_two_hand.cards[i]%>
            <%= render partial: 'card', locals: {card: hand_content, player: this_player,  position: i, source: "hand"} %>

            <%i=i+1%>
        <%end%>   
    </turbo-frame>
    <span class = deck> DECK</span>
</div>


